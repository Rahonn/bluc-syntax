{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "bluc",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.bluc",
				"match": "\\b[A-Z][A-Za-z]*\\b"
			},
			{
				"name": "comment.bluc",
				"match": "^#.*"
			},
			{
				"name": "comment.bluc",
				"match": "^\\!.*"
			},
			{
				"name": "variable.parameter.bluc",
				"match": "\\$[^ ]*"
			},
			{
				"name": "string.bluc",
				"match": "!.+!"
			}]
		}
	},
	"scopeName": "source.bluc"
}